<core:FragmentDefinition
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:f="sap.ui.layout.form">
  <Dialog title="Editar Produto">
    <content>
      <f:SimpleForm>
        <f:content>
          <Label text="ID"/>
          <Input value="{editProduct>/ID}" editable="false"/>
          <Label text="Name"/>
          <Input value="{editProduct>/Name}" placeholder="Preencha"/>
          <Label text="Description"/>
          <Input value="{editProduct>/Description}" placeholder="Preencha"/>
          <Label text="Rating"/>
          <RatingIndicator value="{editProduct>/Rating}" maxValue="5" visualMode="Half" tooltip="0â€“5"/>
          <Label text="Price"/>
          <Input value="{editProduct>/Price}" type="Number" placeholder="Preencha" />
        </f:content>
      </f:SimpleForm>
    </content>
    <buttons>
      <Button text="Cancelar" press="onCloseDialog"/>
      <Button text="Salvar"  type="Emphasized" press=".onEditProduct"/>
    </buttons>
  </Dialog>
</core:FragmentDefinition>